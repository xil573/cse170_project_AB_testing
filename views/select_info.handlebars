<body>
	{{#if bar}}
	<nav id="nav_bar">
		<ul id="nav_bar_content">
			<li id="nav_bar_left">
				<button id = "bar">
				<div class="menu_button" onclick="toggleSidebar()">
						<div class="bar"></div>
						<div class="bar"></div>
						<div class="bar"></div>
				</div>
				</button>
			</li>
			<li id="nav_bar_middle">
				<strong>Select Information</strong>
			</li>
			<li id="nav_bar_right">
				<button id="back_button" class="click_button" onclick="backToAddNewContactPage()">
					<strong>Back</strong>
				</button>
			</li>
			<li id="nav_bar_right">
				<button id="next_button" class="click_button" onclick="confirmPage()">
					<strong>Next</strong>
				</button>
			</li>
		</ul>
	</nav>

	<div id="side_bar_mask" class="mask" hidden="hidden" onclick="toggleSidebar()"></div>
	<nav id="side_bar">
		<ul>
			<li id="album">
				<button id="album_face_border" onclick = "changePageToMyProfile()">
					<img id = "photo" class="contact_img" src="https://shechive.files.wordpress.com/2012/02/a-kitty-cat-7.jpg"/>
				</button>
			</li>
			<li id="name">
				<strong id = "name">Xindi</strong>
			</li>
			<li id="another_folder" class="side_bar_folder">
				<button id="view_profile" class="side_bar_button" onclick="changePageToMyProfile()">
					View my profile
				</button>
				<br>
				<button id="groups" class="side_bar_button" onclick="changePageToGroups()">
					Groups
				</button>
			</li>
			<li id="settings_folder" class="side_bar_folder">
				<button id="setting" class="side_bar_button" onclick="changePageToSettings()">
					Settings
				</button>
				<br> 
				<button id="log_off" class="side_bar_button" onclick="logOff()">
					Log off
				</button>
			</li>
		</ul>
	</nav>
	{{else}}
	<nav id="nav_bar">
		<ul id="nav_bar_content">
			<li id="nav_bar_left">
				<button id="back_button" class="click_button" onclick="backToAddNewContactPage()">
					<strong>Back</strong>
				</button>
			</li>
			<li id="nav_bar_middle">
				<strong>Select Information</strong>
			</li>
			
			<li id="nav_bar_right">
				<button id="next_button" class="click_button" onclick="confirmPage()">
					<strong>Next</strong>
				</button>
			</li>
		</ul>
	</nav>
	{{/if}}
	<main>
		<h3>Please select the information you want to send out:</h3>
		<ul id="contact_info_list">
			
			<form action="/action_page.php" method="get">
  				<input type="checkbox" name="way" value="phone" checked="checked"> Phone Number<br>
  				<input type="checkbox" name="way" value="email" checked="checked"> Email Address<br>
  				<input type="checkbox" name="way" value="facebook"> Facebook<br>
  				<input type="checkbox" name="way" value="linkedin"> LinkedIn<br>
  				<input type="checkbox" name="way" value="linkedin"> WeChat<br>
  				<input type="checkbox" name="way" value="linkedin"> Instagram<br>
  				<!--<input type="submit" value="Submit"> -->
			</form>
		</ul>
	</main>
