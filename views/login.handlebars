	<main>
		<ul id="search_package">
			<li>
				<input id="user_name" type="text" name="" placeholder="Enter your user name">
			</li>
			<li>
				<input id="user_pass" type="password" name="" placeholder="Enter your password">
			</li>
			<li>
				<button id="login_button" class="login_button" onclick="gotoMainPage()">
					<strong>Log in</strong>
				</button>
			</li>
			<li>
				<button id="create_new_button" class="create_button" onclick="gotoCreatePage()">
					<strong>Create an account</strong>
				</button>
			</li>
			<li>
				<p class="facebookLogin">
          			<li id = "texts">Log in with Facebook?
          				<fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
          				</fb:login-button>
          			</li>
        		</p>
			</li>
		</ul>
	</main>
