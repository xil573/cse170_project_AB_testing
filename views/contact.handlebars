<body>
	<style type="text/css">
		body {
				padding: 0;
				margin:0;
				background-color:white;
				align-self:center;
		}
	</style>
	<nav id="nav_bar">
		<style type="text/css">
			#nav_bar{
				position: fixed;
				top:0;
				left:0;
				background-color: white;
				border-bottom: 1px solid grey;
				width: 100%;
				height: 50px;
				z-index: 1024;
			}
		</style>
		<ul id="nav_bar_content">
			<style type="text/css">
				#nav_bar_content{
					list-style: none;
					display: flex;
					padding: 10px;
					line-height: 30px;
				}
			</style>
			<li id="nav_bar_left">
				<style type="text/css">
					#nav_bar_left{
						width: 25%;
						text-align:left;
					}
				</style>
				<button id="back_button" class="click_button" onclick="backToIndex()">
					<strong>Back</strong>
				</button>
				<style type="text/css">
    				.click_button {
        				background-color: transparent;
						border-radius: 5px;
						border: 1px solid black;
						line-height: 24px;
						padding: 0 10px;
						outline:none;
						transition: all 0.2s;
						-webkit-user-select: none;
    				}
    				.click_button:active{
						background-color: rgba(150, 150, 150, 0.3);
					}
				</style>
			</li>
			<li id="nav_bar_middle">
				<style type="text/css">
					#nav_bar_middle{
						width: 50%;
						text-align: center;
					}
				</style>
				<strong id="profile_name">
					Contacts
				</strong>
			</li>
			<li id="nav_bar_right">
			</li>
		</ul>
	</nav>

	<main>
		<style type="text/css">
			main {
					margin-left: 60px;
					margin-top: 51px;
					padding: 15px;
			}
			.contact_img{
				display: block;
    			margin: auto;
				max-width: 80px;
			}
		</style>
		<ul class="contact_info">
			<img class="contact_img" hspace="10" src="{{image}}">
			<ul>
				<h2><strong>Name:</strong> {{name}}</h2>
				<h2><strong>Phone:</strong> {{phone}}</h2>
				<h2><strong>Email:</strong> {{email}}</h2>
			</ul>
		</ul>
		<style type="text/css">
			h2, h4 {
  				font-family: 'Alegreya Sans', sans-serif;
  				font-weight: 300;
  				margin-top: 30px;
				}
		</style>
		<button id="back_button" class="click_button" onclick="">
					<strong>Delete</strong>
		</button>
	</main>
