<body>
	<nav id="nav_bar">
		<ul id="nav_bar_content">
			<li id="nav_bar_left">
				<div class="menu_button" onclick="toggleSidebar()">
					<div class="bar"></div>
					<div class="bar"></div>
					<div class="bar"></div>
				</div>
			</li>
			<li id="nav_bar_middle">
				<strong>Search result</strong>
			</li>
			<li id="nav_bar_right">
				<button id="back_button" class="click_button" onclick="backToAddNewContactPage()">
					<strong>Back</strong>
				</button>
			</li>
			<li id="nav_bar_right">
				<button id="next_button" class="click_button" onclick="selectInfoToSend()">
					<strong>Next</strong>
				</button>
			</li>
		</ul>
	</nav>

	<div id="side_bar_mask" class="mask" hidden="hidden" onclick="toggleSidebar()"></div>
	<nav id="side_bar">
		<ul>
			<li id="album">
				<button id="album_face_border" onclick = "changePageToMyProfile()">
					<img id = "photo" class="contact_img" src="https://shechive.files.wordpress.com/2012/02/a-kitty-cat-7.jpg"/>
				</button>
			</li>
			<li id="name">
				<strong id = "name">Xindi</strong>
			</li>
			<li id="another_folder" class="side_bar_folder">
				<button id="view_profile" class="side_bar_button" onclick="changePageToMyProfile()">
					View my profile
				</button>
				<br>
				<button id="groups" class="side_bar_button" onclick="changePageToGroups()">
					Groups
				</button>
			</li>
			<li id="settings_folder" class="side_bar_folder">
				<button id="setting" class="side_bar_button" onclick="changePageToSettings()">
					Settings
				</button>
				<br> 
				<button id="log_off" class="side_bar_button" onclick="logOff()">
					Log off
				</button>
			</li>
		</ul>
	</nav>

	<main>
		<h3>Please select the people you want to send your information to:</h3>
		<p id="demo"></p>
		<ul id="result_list">
			{{#each user}}
                <li class="search_item">
                    <!--<button id="{{id}}" onclick="requestAddToContact(this)"> -->
                        <script>
                        	var addr = window.location.href;
							var index_first = addr.search("name=");
							var index_last = addr.search("%20");
							var first_name = addr.substring(index_first+ 5, index_last);
							var last_name = addr.substring(index_last+3);
							var person_found = first_name + " " + last_name;
							//document.getElementById("demo").innerHTML = "Name: " + person_found;
							//if(person_found.toUpperCase() == {{name}}.toUpperCase()){}
                        	if(person_found == "{{name}}"){
                        		document.getElementById("demo").innerHTML = '<strong>{{name}}</strong>                       <input type="checkbox" name="add" value="add_ckb"> <br>';
                        	}
                        </script>
                        <!--
                        <img class="contact_img" src="{{imageURL}}">
                        <strong>{{name}}</strong>                       
                        <input type="checkbox" name="add" value="add_ckb"> <br> 
                        -->                      
                    <!--</button> -->
                </li>
            {{/each}}
		</ul>
	</main>
