				<br> 
				<button id="log_off" class="side_bar_button" onclick="logOff()">
					Log off
				</button>
			</li>
		</ul>
	</nav>
	<div id="top_bar_mask" class="mask_top" hidden="hidden" onclick="toggleNewContact()"></div>
	<nav  id="top_bar">
		<ul id="top_bar_content">
			<li id="add_people" class="top_bar_element">
